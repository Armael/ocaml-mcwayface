            pixman-1-cclib.sexp
            pixman-1-ccopt
            pixman-1-cclib))
  (deps    (config/discover.exe))
  (action  (run ${<} -ocamlc ${OCAMLC}))))

(library
 ((name wlroots_bindings)
  (public_name wlroots.bindings)
  (flags (:standard -safe-string))
  (libraries (ctypes.stubs ctypes ctypes.foreign.threaded))
;  (virtual_deps (conf-wlroots))
  ))

